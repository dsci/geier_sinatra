<h2>Spielplan BISHL <%=@year%></h2>
	<table class="schedule" border="0" cellpadding="0" cellspacing="0">
    <%@games.each do |game|%>
         <tr class="<%=home_css(game)%>">
           <td class="date"><%=game.date.strftime('%d.%m.%Y')%></td>
           <td><%=opponent(game)%></td>
           <td class="stadium"><%=game.stadium%></td>
           <td><%=result(game)%></td>
         </tr>
    <%end%>
    </table>